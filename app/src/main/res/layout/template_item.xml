<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="template"
            type="com.example.crud.templates.Template" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lite_grey"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/text_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@{template.messageText}"
                android:textSize="16sp"
                tools:text="Hii, Hello " />

            <ImageButton
                android:id="@+id/delete_img_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:backgroundTint="@color/lite_little_grey"
                app:srcCompat="@drawable/ic_baseline_close_24" />

        </LinearLayout>

    </LinearLayout>
</layout>